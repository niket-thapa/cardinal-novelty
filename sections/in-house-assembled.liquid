{{ 'section-in-house-assembled.css' | asset_url | stylesheet_tag }}

<div class="in-house-assembled-section color-{{ section.settings.color_scheme }} gradient" {{ section.shopify_attributes }}>
  <div class="in-house-assembled-banner page-width">
    <div class="in-house-assembled-content">
      {%- if section.settings.show_flag -%}
        <div
          class="in-house-assembled-flag{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: 1;"
          {% endif %}
        >
          {%- if section.settings.flag_image != blank -%}
            {{
              section.settings.flag_image
              | image_url: width: 200
              | image_tag:
                loading: 'lazy',
                width: section.settings.flag_image.width,
                height: section.settings.flag_image.height,
                alt: section.settings.flag_image.alt | default: 'Flag'
            }}
          {%- else -%}
            {{ 'icon-flag-usa.svg' | inline_asset_content }}
          {%- endif -%}
        </div>
      {%- endif -%}
      
      {%- if section.settings.heading != blank -%}
        <h2
          class="h0 in-house-assembled-heading{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: 2;"
          {% endif %}
        >
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <div
          class="rte in-house-assembled-description{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: 3;"
          {% endif %}
        >
          {{ section.settings.description }}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "In-House Assembled",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_flag",
      "label": "Show flag icon",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "flag_image",
      "label": "Flag image",
      "info": "Upload a custom flag image. If not provided, the default SVG icon will be used."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Assembled In-House in the USA"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>All orders are assembled in-house and shipped from our 100,000 square foot warehouse in Baltimore, Maryland.</p>"
    }
  ],
  "presets": [
    {
      "name": "In-House Assembled"
    }
  ]
}
{% endschema %}

