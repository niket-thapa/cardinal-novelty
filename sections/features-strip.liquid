{{ 'hero-slideshow-side-banners.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding inner-features-strip">
  <div class="page-width">
    {%- assign feature_blocks = section.blocks | where: 'type', 'feature_item' -%}
    {%- if feature_blocks.size > 0 -%}
      <div class="features-strip">
        <div class="features-grid">
          {%- for block in feature_blocks -%}
            <div class="feature" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <div class="feature__icon">
                  {{ block.settings.icon | image_url: width: 50 | image_tag: loading: 'lazy' }}
                </div>
              {%- endif -%}

              <div class="feature-info">
                {%- if block.settings.heading != blank -%}
                  <h3 class="feature__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}

                {%- if block.settings.text != blank -%}
                  <p class="feature__text">{{ block.settings.text }}</p>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Features Strip",
  "tag": "section",
  "class": "section features-strip-section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "feature_item",
      "name": "Feature Item",
      "limit": 12,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading",
          "default": "Feature heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Feature description text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Strip",
      "blocks": [
        { "type": "feature_item" },
        { "type": "feature_item" },
        { "type": "feature_item" }
      ]
    }
  ]
}
{% endschema %}
