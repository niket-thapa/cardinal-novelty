{{ 'section-logos-marquee.css' | asset_url | stylesheet_tag }}
{{ 'component-logos-marquee.js' | asset_url | script_tag }}

{%- liquid
  assign logo_count = section.blocks.size
  assign marquee_speed = section.settings.marquee_speed | default: 30
  assign pause_on_hover = section.settings.pause_on_hover
-%}

<div class="logos-marquee-section color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" 
     data-marquee-speed="{{ marquee_speed }}"
     data-pause-on-hover="{{ pause_on_hover }}">
  
  {%- if section.settings.heading != blank -%}
    <div class="page-width">
      <h2 class="logos-marquee__heading {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    </div>
  {%- endif -%}

  <div class="logos-marquee__container">
    <div class="logos-marquee__track" data-marquee-track>
      <div class="logos-marquee__content">
        {%- comment -%} First set of logos {%- endcomment -%}
        {%- for block in section.blocks -%}
          <div class="logos-marquee__item" {{ block.shopify_attributes }}>
            {%- if block.settings.logo_image != blank -%}
              <div class="logos-marquee__logo">
                {%- if block.settings.logo_link != blank -%}
                  <a href="{{ block.settings.logo_link }}" class="logos-marquee__link" target="_blank" rel="noopener">
                {%- endif -%}
                
                <img
                  src="{{ block.settings.logo_image | image_url }}"
                  alt="{{ block.settings.logo_image.alt | default: block.settings.logo_name | escape }}"
                  loading="lazy"
                  class="logos-marquee__image"
                >
                
                {%- if block.settings.logo_link != blank -%}
                  </a>
                {%- endif -%}
              </div>
            {%- else -%}
              <div class="logos-marquee__placeholder">
                <span class="logos-marquee__placeholder-text">{{ block.settings.logo_name | default: 'Logo' }}</span>
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
        
        {%- comment -%} Duplicate set for seamless infinite loop {%- endcomment -%}
        {%- for block in section.blocks -%}
          <div class="logos-marquee__item">
            {%- if block.settings.logo_image != blank -%}
              <div class="logos-marquee__logo">
                {%- if block.settings.logo_link != blank -%}
                  <a href="{{ block.settings.logo_link }}" class="logos-marquee__link" target="_blank" rel="noopener">
                {%- endif -%}
                
                <img
                  src="{{ block.settings.logo_image | image_url }}"
                  alt="{{ block.settings.logo_image.alt | default: block.settings.logo_name | escape }}"
                  loading="lazy"
                  class="logos-marquee__image"
                >
                
                {%- if block.settings.logo_link != blank -%}
                  </a>
                {%- endif -%}
              </div>
            {%- else -%}
              <div class="logos-marquee__placeholder">
                <span class="logos-marquee__placeholder-text">{{ block.settings.logo_name | default: 'Logo' }}</span>
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
        
        {%- comment -%} Third set for extra seamless coverage {%- endcomment -%}
        {%- for block in section.blocks -%}
          <div class="logos-marquee__item">
            {%- if block.settings.logo_image != blank -%}
              <div class="logos-marquee__logo">
                {%- if block.settings.logo_link != blank -%}
                  <a href="{{ block.settings.logo_link }}" class="logos-marquee__link" target="_blank" rel="noopener">
                {%- endif -%}
                
                <img
                  src="{{ block.settings.logo_image | image_url }}"
                  alt="{{ block.settings.logo_image.alt | default: block.settings.logo_name | escape }}"
                  loading="lazy"
                  class="logos-marquee__image"
                >
                
                {%- if block.settings.logo_link != blank -%}
                  </a>
                {%- endif -%}
              </div>
            {%- else -%}
              <div class="logos-marquee__placeholder">
                <span class="logos-marquee__placeholder-text">{{ block.settings.logo_name | default: 'Logo' }}</span>
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
        
        {%- comment -%} Fourth set for complete infinite coverage {%- endcomment -%}
        {%- for block in section.blocks -%}
          <div class="logos-marquee__item">
            {%- if block.settings.logo_image != blank -%}
              <div class="logos-marquee__logo">
                {%- if block.settings.logo_link != blank -%}
                  <a href="{{ block.settings.logo_link }}" class="logos-marquee__link" target="_blank" rel="noopener">
                {%- endif -%}
                
                <img
                  src="{{ block.settings.logo_image | image_url }}"
                  alt="{{ block.settings.logo_image.alt | default: block.settings.logo_name | escape }}"
                  loading="lazy"
                  class="logos-marquee__image"
                >
                
                {%- if block.settings.logo_link != blank -%}
                  </a>
                {%- endif -%}
              </div>
            {%- else -%}
              <div class="logos-marquee__placeholder">
                <span class="logos-marquee__placeholder-text">{{ block.settings.logo_name | default: 'Logo' }}</span>
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Logos Marquee",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trusted by leading brands"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "s",
      "label": "Marquee speed",
      "default": 60,
      "info": "Lower values = faster scrolling"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "default": true,
      "label": "Pause on hover"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo image"
        },
        {
          "type": "text",
          "id": "logo_name",
          "label": "Logo name",
          "info": "Used for alt text if no image is provided"
        },
        {
          "type": "url",
          "id": "logo_link",
          "label": "Logo link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logos Marquee",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}
