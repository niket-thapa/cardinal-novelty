{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.enable_banner and section.settings.desktop_image != blank -%}
    .page-banner-wrapper {
      padding-top: {{ section.settings.banner_padding_top | times: 0.4 | round: 0 }}px;
      padding-bottom: {{ section.settings.banner_padding_bottom | times: 0.4 | round: 0 }}px;
    }
    
    @media screen and (min-width: 750px) {
      .page-banner-wrapper {
        padding-top: {{ section.settings.banner_padding_top }}px;
        padding-bottom: {{ section.settings.banner_padding_bottom }}px;
      }
    }
    
    .main-page-banner {
      position: relative;
      overflow: hidden;
      border-radius: 1rem;
    }
    
    .main-page-banner__image {
      width: 100%;
      height: auto;
      object-fit: cover;
    }
    
    .main-page-banner__content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      z-index: 2;
      color: white;
      max-width: 80%;
    }
    
    .main-page-banner__title {
      font-size: 3rem;
      font-weight: 700;
      margin: 0;
    }
    
    @media screen and (min-width: 750px) {
      .main-page-banner__title {
        font-size: 4rem;
      }
    }
    
    @media screen and (min-width: 990px) {
      .main-page-banner__title {
        font-size: 5rem;
      }
    }
    
    .main-page-banner__image--desktop {
      display: block;
    }
    .main-page-banner__image--mobile {
      display: none;
    }
    @media screen and (max-width: 989px) {
      .main-page-banner__image--desktop {
        display: none;
      }
      .main-page-banner__image--mobile {
        display: block;
      }
    }
  {%- endif -%}
{%- endstyle -%}

{%- paginate blog.articles by 6 -%}
  {%- if section.settings.enable_banner and section.settings.desktop_image != blank -%}
    <div class="page-banner-wrapper"{% if section.settings.banner_background_color != blank %} style="background-color: {{ section.settings.banner_background_color }};"{% endif %}>
      {%- if section.settings.banner_page_width -%}
        <div class="page-width">
          <div class="main-page-banner">
            <!-- Desktop Image -->
            <img
              src="{{ section.settings.desktop_image | image_url: width: 1920 }}"
              alt="{{ section.settings.desktop_image.alt | default: blog.title | escape }}"
              class="main-page-banner__image main-page-banner__image--desktop"
              loading="eager"
            >
            
            <!-- Mobile Image -->
            {%- if section.settings.mobile_image != blank -%}
              <img
                src="{{ section.settings.mobile_image | image_url: width: 768 }}"
                alt="{{ section.settings.mobile_image.alt | default: blog.title | escape }}"
                class="main-page-banner__image main-page-banner__image--mobile"
                loading="eager"
              >
            {%- endif -%}
            
            <div class="main-page-banner__content">
              <h1 class="main-page-banner__title{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"{% if section.settings.banner_text_color != blank %} style="color: {{ section.settings.banner_text_color }};"{% endif %}>
                {{ blog.title | escape }}
              </h1>
            </div>
          </div>
        </div>
      {%- else -%}
        <div class="main-page-banner">
          <!-- Desktop Image -->
          <img
            src="{{ section.settings.desktop_image | image_url: width: 1920 }}"
            alt="{{ section.settings.desktop_image.alt | default: blog.title | escape }}"
            class="main-page-banner__image main-page-banner__image--desktop"
            loading="eager"
          >
          
          <!-- Mobile Image -->
          {%- if section.settings.mobile_image != blank -%}
            <img
              src="{{ section.settings.mobile_image | image_url: width: 768 }}"
              alt="{{ section.settings.mobile_image.alt | default: blog.title | escape }}"
              class="main-page-banner__image main-page-banner__image--mobile"
              loading="eager"
            >
          {%- endif -%}
          
          <div class="main-page-banner__content">
            <h1 class="main-page-banner__title{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"{% if section.settings.banner_text_color != blank %} style="color: {{ section.settings.banner_text_color }};"{% endif %}>
              {{ blog.title | escape }}
            </h1>
          </div>
        </div>
      {%- endif -%}
    </div>
  {%- endif -%}
  <div class="section-{{ section.id }}-padding">

    <div class="main-blog page-width">
      {%- unless section.settings.enable_banner and section.settings.desktop_image != blank -%}
        <h1 class="title--primary{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
          {{ blog.title | escape }}
        </h1>
      {%- endunless -%}

      <div class="blog-articles {% if section.settings.layout == 'collage' %}blog-articles--collage{% endif %} color-{{ section.settings.color_scheme }}">
        {%- for article in blog.articles -%}
          <div
            class="blog-articles__article article{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            {%- render 'article-card',
              article: article,
              media_height: section.settings.image_height,
              media_aspect_ratio: article.image.aspect_ratio,
              show_image: section.settings.show_image,
              show_date: section.settings.show_date,
              show_author: section.settings.show_author,
              show_excerpt: true
            -%}
          </div>
        {%- endfor -%}
      </div>

      {%- if paginate.pages > 1 -%}
        {%- render 'pagination', paginate: paginate -%}
      {%- endif -%}
    </div>
  </div>
{%- endpaginate -%}

{% schema %}
{
  "name": "t:sections.main-blog.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Banner Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_banner",
      "label": "Enable banner mode",
      "default": false,
      "info": "Show blog as a banner with background image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop banner image",
      "info": "Required for banner mode. Shows on screens 990px and above."
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile banner image (optional)",
      "info": "Shows on screens below 990px. If not provided, desktop image will be used."
    },
    {
      "type": "checkbox",
      "id": "banner_page_width",
      "label": "Use page width for banner content",
      "default": false,
      "info": "Wrap banner title with page-width container"
    },
    {
      "type": "color",
      "id": "banner_background_color",
      "label": "Banner background color",
      "info": "Background color for the banner (shows if image doesn't load)"
    },
    {
      "type": "color",
      "id": "banner_text_color",
      "label": "Banner text color",
      "default": "#ffffff",
      "info": "Color for the banner title text"
    },
    {
      "type": "header",
      "content": "Banner Padding"
    },
    {
      "type": "range",
      "id": "banner_padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "banner_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Blog Settings"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "grid",
          "label": "t:sections.main-blog.settings.layout.options__1.label"
        },
        {
          "value": "collage",
          "label": "t:sections.main-blog.settings.layout.options__2.label"
        }
      ],
      "default": "collage",
      "label": "t:sections.main-blog.settings.layout.label"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "default": true,
      "label": "t:sections.main-blog.settings.show_image.label"
    },
    {
      "type": "select",
      "id": "image_height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.main-blog.settings.image_height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.main-blog.settings.image_height.options__2.label"
        },
        {
          "value": "medium",
          "label": "t:sections.main-blog.settings.image_height.options__3.label"
        },
        {
          "value": "large",
          "label": "t:sections.main-blog.settings.image_height.options__4.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.main-blog.settings.image_height.label"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "t:sections.main-blog.settings.show_date.label"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": false,
      "label": "t:sections.main-blog.settings.show_author.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
