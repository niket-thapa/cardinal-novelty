{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.enable_banner and section.settings.desktop_image != blank -%}
    #shopify-section-{{ section.id }} {
      {%- if section.settings.banner_background_color != blank -%}
        background-color: {{ section.settings.banner_background_color }};
      {%- endif -%}
    }
    
    .main-page-banner {
      position: relative;
      overflow: hidden;
      border-radius: 1rem;
    }
    
    .main-page-banner__image {
      width: 100%;
      height: auto;
      object-fit: cover;
    }
    
    .main-page-banner__content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      z-index: 2;
      color: white;
      max-width: 80%;
    }
    
    .main-page-banner__title {
      font-size: 3rem;
      font-weight: 700;
      margin: 0;
    }
    
    @media screen and (min-width: 750px) {
      .main-page-banner__title {
        font-size: 4rem;
      }
    }
    
    @media screen and (min-width: 990px) {
      .main-page-banner__title {
        font-size: 5rem;
      }
    }
  {%- endif -%}
{%- endstyle -%}
<div class="section-{{ section.id }}-padding">
{%- if section.settings.enable_banner and section.settings.desktop_image != blank -%}
  {%- if section.settings.banner_page_width -%}
    <div class="page-width">
      <div class="main-page-banner">
        <!-- Desktop Image -->
        <img
          src="{{ section.settings.desktop_image | image_url: width: 1920 }}"
          alt="{{ section.settings.desktop_image.alt | default: page.title | escape }}"
          class="main-page-banner__image main-page-banner__image--desktop"
          loading="eager"
        >
        
        <!-- Mobile Image -->
        {%- if section.settings.mobile_image != blank -%}
          <img
            src="{{ section.settings.mobile_image | image_url: width: 768 }}"
            alt="{{ section.settings.mobile_image.alt | default: page.title | escape }}"
            class="main-page-banner__image main-page-banner__image--mobile"
            loading="eager"
          >
        {%- endif -%}
        
        <div class="main-page-banner__content">
          <h1 class="main-page-banner__title{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"{% if section.settings.banner_text_color != blank %} style="color: {{ section.settings.banner_text_color }};"{% endif %}>
            {{ page.title | escape }}
          </h1>
        </div>
      </div>
    </div>
  {%- else -%}
    <div class="main-page-banner">
      <!-- Desktop Image -->
      <img
        src="{{ section.settings.desktop_image | image_url: width: 1920 }}"
        alt="{{ section.settings.desktop_image.alt | default: page.title | escape }}"
        class="main-page-banner__image main-page-banner__image--desktop"
        loading="eager"
      >
      
      <!-- Mobile Image -->
      {%- if section.settings.mobile_image != blank -%}
        <img
          src="{{ section.settings.mobile_image | image_url: width: 768 }}"
          alt="{{ section.settings.mobile_image.alt | default: page.title | escape }}"
          class="main-page-banner__image main-page-banner__image--mobile"
          loading="eager"
        >
      {%- endif -%}
      
      <div class="main-page-banner__content">
        <h1 class="main-page-banner__title{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"{% if section.settings.banner_text_color != blank %} style="color: {{ section.settings.banner_text_color }};"{% endif %}>
          {{ page.title | escape }}
        </h1>
      </div>
    </div>
  {%- endif -%}
  
  {%- if page.content != blank -%}
    <div class="page-width page-width--narrow section-{{ section.id }}-padding">
      <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ page.content }}
      </div>
    </div>
  {%- endif -%}
{%- else -%}
  <div class="page-width page-width--narrow section-{{ section.id }}-padding">
    <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{ page.title | escape }}
    </h1>
    {%- if page.content != blank -%}
      <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ page.content }}
      </div>
    {%- endif -%}
  </div>
{%- endif -%}
</div>
{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Banner Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_banner",
      "label": "Enable banner mode",
      "default": false,
      "info": "Show page as a banner with background image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop banner image",
      "info": "Required for banner mode. Shows on screens 990px and above."
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile banner image (optional)",
      "info": "Shows on screens below 990px. If not provided, desktop image will be used."
    },
    {
      "type": "checkbox",
      "id": "banner_page_width",
      "label": "Use page width for banner content",
      "default": false,
      "info": "Wrap banner title with page-width container"
    },
    {
      "type": "color",
      "id": "banner_background_color",
      "label": "Banner background color",
      "info": "Background color for the banner (shows if image doesn't load)"
    },
    {
      "type": "color",
      "id": "banner_text_color",
      "label": "Banner text color",
      "default": "#ffffff",
      "info": "Color for the banner title text"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Main Page"
    }
  ]
}
{% endschema %}
