        },
        {
          "type": "image_picker",
          "id": "slide_logo_image",
          "label": "t:sections.hero-slideshow-with-side-banners.blocks.slide.settings.logo.label"
        },
        {
          "type": "inline_richtext",
          "id": "slide_heading",
          "default": "t:sections.hero-slideshow-with-side-banners.blocks.slide.settings.heading.default",
          "label": "t:sections.hero-slideshow-with-side-banners.blocks.slide.settings.heading.label"
        },
        {
          "type": "inline_richtext",
          "id": "slide_subheading",
          "default": "t:sections.hero-slideshow-with-side-banners.blocks.slide.settings.subheading.default",
          "label": "t:sections.hero-slideshow-with-side-banners.blocks.slide.settings.subheading.label"
        },
        {
          "type": "text",
          "id": "slide_button_label",
          "default": "t:sections.hero-slideshow-with-side-banners.blocks.slide.settings.button_label.default",
          "label": "t:sections.hero-slideshow-with-side-banners.blocks.slide.settings.button_label.label"
