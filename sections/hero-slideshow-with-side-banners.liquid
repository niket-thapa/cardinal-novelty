{{ 'hero-slideshow-side-banners.css' | asset_url | stylesheet_tag }}

<div class="hero-slideshow-side-banners page-width">
  <div class="hero-slideshow-side-banners__inner">
    
    <!-- Slideshow -->
    <div class="hero-slideshow-side-banners__slideshow">
      <div class="slideshow" 
        data-autoplay="{{ section.settings.autoplay }}"
        data-speed="{{ section.settings.autoplay_speed | times: 1000 }}">
        
        {%- for block in section.blocks -%}
          <div class="slideshow__slide" {{ block.shopify_attributes }}>
            {%- if block.settings.slide_image != blank -%}
              <div class="slideshow__media">
                {{ block.settings.slide_image | image_url: width: 2000 | image_tag }}
              </div>
            {%- endif -%}
            
            <div class="slideshow__content">
              {%- if block.settings.slide_logo_image != blank -%}
                <div class="slideshow__logo">
                  {{ block.settings.slide_logo_image | image_url: width: 213 | image_tag }}
                </div>
              {%- endif -%}
              {%- if block.settings.slide_heading != blank -%}
                <h2 class="slideshow__heading">{{ block.settings.slide_heading }}</h2>
              {%- endif -%}
              {%- if block.settings.slide_subheading != blank -%}
                <p class="slideshow__subheading subtitle">{{ block.settings.slide_subheading }}</p>
              {%- endif -%}
              
              {%- if block.settings.slide_button_label != blank -%}
                <a href="{{ block.settings.slide_link | default: '#' }}" class="button button--secondary">
                  {{ block.settings.slide_button_label }}
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>

    <!-- Right side banners -->
    <div class="hero-slideshow-side-banners__side">
      
      <!-- Top banner -->
      {%- if section.settings.right_top_image != blank -%}
        <a href="{{ section.settings.right_top_link | default: '#' }}" class="side-banner side-banner--top">
          {{ section.settings.right_top_image | image_url: width: 800 | image_tag }}
          {%- if section.settings.right_top_heading != blank -%}
            <span class="side-banner__heading">{{ section.settings.right_top_heading }}</span>
          {%- endif -%}
        </a>
      {%- endif -%}

      <!-- Bottom banner -->
      {%- if section.settings.right_bottom_image != blank -%}
        <a href="{{ section.settings.right_bottom_link | default: '#' }}" class="side-banner side-banner--bottom">
          {{ section.settings.right_bottom_image | image_url: width: 800 | image_tag }}
          {%- if section.settings.right_bottom_heading != blank -%}
            <span class="side-banner__heading">{{ section.settings.right_bottom_heading }}</span>
          {%- endif -%}
        </a>
      {%- endif -%}

    </div>
  </div>
  {%- assign feature_blocks = section.blocks | where: 'type', 'feature_item' -%}
  {%- if feature_blocks.size > 0 -%}
    <div class="features-strip">
      <div class="features-grid">
        {%- for block in feature_blocks -%}
          <div class="feature" {{ block.shopify_attributes }}>
            {%- if block.settings.icon != blank -%}
              <div class="feature__icon">
                {{ block.settings.icon | image_url: width: 50 | image_tag: loading: 'lazy' }}
              </div>
            {%- endif -%}

            <div class="feature-info">
              {%- if block.settings.heading != blank -%}
                <h3 class="feature__heading">{{ block.settings.heading }}</h3>
              {%- endif -%}

              {%- if block.settings.text != blank -%}
                <p class="feature__text">{{ block.settings.text }}</p>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
</div>

