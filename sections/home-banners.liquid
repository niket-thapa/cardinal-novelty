{% comment %}
  Collection Banners Section
  Displays a grid of banner images with headings and buttons
{% endcomment %}

{{ 'home-banners.css' | asset_url | stylesheet_tag }}

<div class="home-banners">
  <div class="home-banners__container page-width">
    <div class="home-banners__grid">
      {% for block in section.blocks %}
        <div class="home-banners__item" {{ block.shopify_attributes }}>
          {% if block.settings.button_text != blank and block.settings.button_link != blank %}
            <a 
                href="{{ block.settings.button_link }}"
              >
          {% endif %}
          <div class="home-banners__image-wrapper">
            {% if block.settings.image != blank %}
              <img 
                class="home-banners__image"
                src="{{ block.settings.image | image_url: width: 416 }}"
                alt="{{ block.settings.image.alt | default: block.settings.heading }}"
                width="416"
                loading="lazy"
              >
            {% else %}
              <div class="home-banners__image home-banners__image--placeholder">
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
          </div>

          <div class="home-banners__content">
            {% if block.settings.heading != blank %}
              <h3 
                class="home-banners__item-heading"
                style="color: {{ block.settings.heading_color }};"
              >
                {{ block.settings.heading }}
              </h3>
            {% endif %}
            
            {% if block.settings.button_text != blank and block.settings.button_link != blank %}
              <button 
                type="button"
                class="button button--secondary"
              >
                {{ block.settings.button_text }}
              </button>
            {% endif %}
          </div>
          {% if block.settings.button_text != blank and block.settings.button_link != blank %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Home Banners",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Banner Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Banner Heading",
          "default": "Collection Name"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Banners",
      "blocks": [
        {
          "type": "banner"
        },
        {
          "type": "banner"
        },
        {
          "type": "banner"
        }
      ]
    }
  ]
}
{% endschema %}
